            <h1 class="text-2xl md:text-3xl font-bold text-gray-800">Kalkulator Pupuk Pro</h1>
            <p class="text-gray-500 mt-2">Database pupuk diperbarui sesuai daftar Anda.</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

            <!-- Kolom 1: Target Nutrisi -->
            <div class="bg-gray-50 p-6 rounded-xl space-y-6">
                <h2 class="text-xl font-semibold text-gray-700 border-b pb-2">1. Target Nutrisi (g/m²)</h2>
                <form id="nutrient-form" class="space-y-4">
                    <!-- Nutrisi Primer -->
                    <div>
                        <h3 class="font-semibold text-blue-600 mb-2">Nutrisi Primer (Makro)</h3>
                        <div class="space-y-3">
                            <div>
                                <label for="target-n" class="text-sm font-medium text-gray-600">Nitrogen (N)</label>
                                <input type="number" id="target-n" class="w-full mt-1 p-2 border border-gray-300 rounded-lg" value="20">
                            </div>
                            <div>
                                <label for="target-p" class="text-sm font-medium text-gray-600">Fosfor (P)</label>
                                <input type="number" id="target-p" class="w-full mt-1 p-2 border border-gray-300 rounded-lg" value="10">
                            </div>
                            <div>
                                <label for="target-k" class="text-sm font-medium text-gray-600">Kalium (K)</label>
                                <input type="number" id="target-k" class="w-full mt-1 p-2 border border-gray-300 rounded-lg" value="15">
                            </div>
                        </div>
                    </div>
                    <!-- Nutrisi Sekunder -->
                    <div>
                        <h3 class="font-semibold text-green-600 mb-2">Nutrisi Sekunder</h3>
                        <div class="space-y-3">
                            <div>
                                <label for="target-ca" class="text-sm font-medium text-gray-600">Kalsium (Ca)</label>
                                <input type="number" id="target-ca" class="w-full mt-1 p-2 border border-gray-300 rounded-lg" value="5">
                            </div>
                             <div>
                                <label for="target-mg" class="text-sm font-medium text-gray-600">Magnesium (Mg)</label>
                                <input type="number" id="target-mg" class="w-full mt-1 p-2 border border-gray-300 rounded-lg" value="2">
                            </div>
                             <div>
                                <label for="target-s" class="text-sm font-medium text-gray-600">Sulfur (S)</label>
                                <input type="number" id="target-s" class="w-full mt-1 p-2 border border-gray-300 rounded-lg" value="3">
                            </div>
                        </div>
                    </div>
                     <!-- Nutrisi Tersier -->
                    <div>
                        <h3 class="font-semibold text-yellow-600 mb-2">Nutrisi Tersier (Mikro)</h3>
                         <div class="space-y-3">
                            <div>
                                <label for="target-b" class="text-sm font-medium text-gray-600">Boron (B)</label>
                                <input type="number" id="target-b" step="0.1" class="w-full mt-1 p-2 border border-gray-300 rounded-lg" value="0.5">
                            </div>
                             <div>
                                <label for="target-zn" class="text-sm font-medium text-gray-600">Zinc (Zn)</label>
                                <input type="number" id="target-zn" step="0.1" class="w-full mt-1 p-2 border border-gray-300 rounded-lg" value="0.2">
                            </div>
                        </div>
                    </div>
                    <div>
                        <label for="area" class="text-sm font-medium text-gray-600">Luas Lahan (m²)</label>
                        <input type="number" id="area" class="w-full mt-1 p-2 border border-gray-300 rounded-lg" value="100">
                    </div>
                </form>
            </div>

            <!-- Kolom 2: Manajemen & Seleksi Pupuk -->
            <div class="bg-gray-50 p-6 rounded-xl space-y-6">
                <div>
                    <h2 class="text-xl font-semibold text-gray-700 border-b pb-2 mb-3">2. Pengelola Pupuk</h2>
                    <div id="fertilizer-management-list" class="space-y-2 max-h-48 overflow-y-auto custom-scrollbar pr-2 mb-3">
                        <!-- Daftar pupuk untuk dikelola akan diisi oleh JavaScript -->
                    </div>
                    <button id="add-fertilizer-btn" class="w-full bg-green-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-green-700 transition">
                        + Tambah Pupuk Baru
                    </button>
                </div>
                <div>
                    <h2 class="text-xl font-semibold text-gray-700 border-b pb-2 mb-3">3. Pilih Pupuk Tersedia</h2>
                    <div id="fertilizer-selection-list" class="space-y-2 max-h-48 overflow-y-auto custom-scrollbar pr-2">
                        <!-- Daftar pupuk untuk dipilih akan diisi oleh JavaScript -->
                    </div>
                    <div id="selection-warning" class="hidden text-sm text-red-600 mt-2">Pilih minimal satu jenis pupuk.</div>
                </div>
            </div>
            
            <!-- Kolom 3: Hasil & Aksi -->
            <div class="bg-blue-50 p-6 rounded-xl flex flex-col">
                <h2 class="text-xl font-semibold text-gray-700 border-b pb-2 mb-4">4. Hasil Rekomendasi</h2>
                <div id="results-container" class="flex-grow flex flex-col justify-center items-center text-center">
                    <div id="placeholder-result">
                        <svg class="w-16 h-16 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                        <p class="mt-2 text-gray-500">Hasil perhitungan akan muncul di sini.</p>
                    </div>
                    <div id="actual-result" class="hidden w-full text-left">
                        <div id="results-list" class="space-y-2 mb-4"></div>
                        <div id="summary" class="border-t pt-4 mt-4 space-y-3"></div>
                    </div>
                </div>
                <div class="mt-auto pt-6">
                    <div class="flex items-center space-x-3">
                        <button type="button" id="calculate-btn" class="w-full flex justify-center items-center bg-blue-600 text-white font-semibold py-2.5 px-4 rounded-lg hover:bg-blue-700 transition">
                            <span id="btn-text">Hitung Campuran</span>
                            <div id="loader" class="hidden loader"></div>
                        </button>
                        <button type="button" id="reset-btn" class="w-1/3 bg-gray-200 text-gray-700 font-semibold py-2.5 px-4 rounded-lg hover:bg-gray-300">Reset</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Modal Tambah Pupuk -->
    <div id="add-fertilizer-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
        <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-lg">
            <h3 class="text-xl font-bold mb-5 text-gray-800">Tambah/Edit Pupuk Baru</h3>
            <form id="add-fertilizer-form" class="space-y-4">
                <div>
                    <label for="fert-name" class="block text-sm font-medium text-gray-700 mb-1">Nama Pupuk</label>
                    <input type="text" id="fert-name" placeholder="Contoh: Kompos Super" class="w-full p-2 border border-gray-300 rounded-lg" required>
                </div>
                <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 pt-2">
                    <div>
                        <label for="fert-n" class="block text-sm font-medium text-gray-600">N (%)</label>
                        <input type="number" step="0.01" id="fert-n" class="w-full p-2 border border-gray-300 rounded-lg mt-1" value="0">
                    </div>
                    <div>
                        <label for="fert-p" class="block text-sm font-medium text-gray-600">P (%)</label>
                        <input type="number" step="0.01" id="fert-p" class="w-full p-2 border border-gray-300 rounded-lg mt-1" value="0">
                    </div>
                    <div>
                        <label for="fert-k" class="block text-sm font-medium text-gray-600">K (%)</label>
                        <input type="number" step="0.01" id="fert-k" class="w-full p-2 border border-gray-300 rounded-lg mt-1" value="0">
                    </div>
                     <div>
                        <label for="fert-s" class="block text-sm font-medium text-gray-600">S (%)</label>
                        <input type="number" step="0.01" id="fert-s" class="w-full p-2 border border-gray-300 rounded-lg mt-1" value="0">
                    </div>
                    <div>
                        <label for="fert-ca" class="block text-sm font-medium text-gray-600">Ca (%)</label>
                        <input type="number" step="0.01" id="fert-ca" class="w-full p-2 border border-gray-300 rounded-lg mt-1" value="0">
                    </div>
                    <div>
                        <label for="fert-mg" class="block text-sm font-medium text-gray-600">Mg (%)</label>
                        <input type="number" step="0.01" id="fert-mg" class="w-full p-2 border border-gray-300 rounded-lg mt-1" value="0">
                    </div>
                    <div>
                        <label for="fert-b" class="block text-sm font-medium text-gray-600">B (%)</label>
                        <input type="number" step="0.01" id="fert-b" class="w-full p-2 border border-gray-300 rounded-lg mt-1" value="0">
                    </div>
                    <div>
                        <label for="fert-zn" class="block text-sm font-medium text-gray-600">Zn (%)</label>
                        <input type="number" step="0.01" id="fert-zn" class="w-full p-2 border border-gray-300 rounded-lg mt-1" value="0">
                    </div>
                </div>
                <div class="flex justify-end space-x-3 pt-4">
                    <button type="button" id="cancel-add-btn" class="bg-gray-200 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-300">Batal</button>
                    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Simpan Pupuk</button>
                </div>
            </form>
        </div>
    </div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // --- DATABASE & STATE MANAGEMENT ---
    const DB_KEY = 'fertilizerProDatabase';
    let fertilizerDatabase = [];

    // --- PERUBAHAN UTAMA: Database pupuk diperbarui sesuai PDF ---
    const defaultFertilizers = [
        { name: 'Karate Plus Boroni', N: 15.5, P: 0, K: 0, Ca: 26, Mg: 0, S: 0, B: 0.3, Zn: 0 },
        { name: 'ESTA Kieser-Mag', N: 0, P: 0, K: 0, Ca: 0, Mg: 27, S: 20, B: 0, Zn: 0 },
        { name: 'Meroke CPN 15-0-15', N: 15, P: 0, K: 15, Ca: 0, Mg: 0, S: 0, B: 0, Zn: 0 },
        { name: 'Meroke KKB', N: 0, P: 0, K: 40, Ca: 0, Mg: 0, S: 0, B: 0.8, Zn: 0 },
        { name: 'Meroke MOP', N: 0, P: 0, K: 60, Ca: 0, Mg: 0, S: 0, B: 0, Zn: 0 },
        { name: 'Meroke SOP', N: 0, P: 0, K: 52, Ca: 0, Mg: 0, S: 18, B: 0, Zn: 0 },
        { name: 'Meroke TSP', N: 0, P: 46, K: 0, Ca: 0, Mg: 0, S: 0, B: 0, Zn: 0 },
        { name: 'Meroke ZA', N: 21, P: 0, K: 0, Ca: 0, Mg: 0, S: 24, B: 0, Zn: 0 },
        { name: 'Mutiara 16-16-16', N: 16, P: 16, K: 16, Ca: 0, Mg: 0, S: 0, B: 0, Zn: 0 },
        { name: 'Mutiara Grower 15-9-20', N: 15, P: 9, K: 20, Ca: 0, Mg: 0, S: 0, B: 0, Zn: 0 },
        { name: 'Mutiara Partner 13-13-24', N: 13, P: 13, K: 24, Ca: 0, Mg: 0, S: 0, B: 0, Zn: 0 },
        { name: 'Mutiara Profesional 9-25-25', N: 9, P: 25, K: 25, Ca: 0, Mg: 0, S: 0, B: 0, Zn: 0 },
        { name: 'Mutiara Sprinter 20-10-10', N: 20, P: 10, K: 10, Ca: 0, Mg: 0, S: 0, B: 0, Zn: 0 },
        { name: 'SS (Amaphos)', N: 16, P: 20, K: 0, Ca: 0, Mg: 0, S: 12, B: 0, Zn: 0 },
        { name: 'SoluMag', N: 0, P: 0, K: 0, Ca: 0, Mg: 27, S: 0, B: 0, Zn: 0 },
        { name: 'Suburkali Butir', N: 0, P: 0, K: 30, Ca: 0, Mg: 10, S: 17, B: 0, Zn: 0 }
    ];
    
    // --- DOM REFERENCES ---
    const nutrientForm = document.getElementById('nutrient-form');
    const managementList = document.getElementById('fertilizer-management-list');
    const selectionList = document.getElementById('fertilizer-selection-list');
    const addBtn = document.getElementById('add-fertilizer-btn');
    const modal = document.getElementById('add-fertilizer-modal');
    const addFertilizerForm = document.getElementById('add-fertilizer-form');
    const cancelAddBtn = document.getElementById('cancel-add-btn');
    const calculateBtn = document.getElementById('calculate-btn');
    const resetBtn = document.getElementById('reset-btn');
    const resultsContainer = document.getElementById('results-container');
    const placeholderResult = document.getElementById('placeholder-result');
    const actualResult = document.getElementById('actual-result');
    const resultsList = document.getElementById('results-list');
    const summary = document.getElementById('summary');
    const selectionWarning = document.getElementById('selection-warning');

    // --- FERTILIZER MANAGEMENT FUNCTIONS ---
    function saveFertilizers() {
        localStorage.setItem(DB_KEY, JSON.stringify(fertilizerDatabase));
    }

    function loadFertilizers() {
        const db = localStorage.getItem(DB_KEY);
        try {
            const parsedDb = db ? JSON.parse(db) : null;
            if (parsedDb && parsedDb.length > 0) {
                 fertilizerDatabase = parsedDb;
            } else {
                 fertilizerDatabase = [...defaultFertilizers];
                 saveFertilizers(); // Save defaults if no DB exists or it's empty
            }
        } catch (e) {
            fertilizerDatabase = [...defaultFertilizers];
        }
    }

    function renderLists() {
        managementList.innerHTML = '';
        selectionList.innerHTML = '';
        fertilizerDatabase.sort((a,b) => a.name.localeCompare(b.name));

        fertilizerDatabase.forEach(fert => {
            const safeId = fert.name.replace(/[^a-zA-Z0-9]/g, '-');
            // Management List Item
            const mgmtItem = document.createElement('div');
            mgmtItem.className = 'flex justify-between items-center text-sm bg-white p-2 rounded';
            mgmtItem.innerHTML = `
                <span class="truncate pr-2">${fert.name}</span>
                <button data-name="${fert.name}" class="delete-btn flex-shrink-0 font-bold text-red-500 hover:text-red-700 text-xl px-2">&times;</button>
            `;
            managementList.appendChild(mgmtItem);

            // Selection List Item
            const selectItem = document.createElement('div');
            selectItem.className = 'flex items-center';
            selectItem.innerHTML = `
                <input type="checkbox" id="select-${safeId}" value="${fert.name}" name="fertilizer" class="form-checkbox h-5 w-5 text-blue-600 border-gray-300 rounded">
                <label for="select-${safeId}" class="ml-3 block text-sm text-gray-700">${fert.name}</label>
            `;
            selectionList.appendChild(selectItem);
        });

        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const name = e.currentTarget.getAttribute('data-name');
                if (confirm(`Apakah Anda yakin ingin menghapus pupuk "${name}"?`)) {
                    fertilizerDatabase = fertilizerDatabase.filter(f => f.name !== name);
                    saveFertilizers();
                    renderLists();
                }
            });
        });
    }

    // --- MODAL FUNCTIONS ---
    addBtn.addEventListener('click', () => {
        addFertilizerForm.reset();
        modal.classList.remove('hidden');
    });
    cancelAddBtn.addEventListener('click', () => modal.classList.add('hidden'));
    modal.addEventListener('click', (e) => {
        if (e.target === modal) modal.classList.add('hidden');
    });

    addFertilizerForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const name = document.getElementById('fert-name').value.trim();
        if (!name) { alert('Nama pupuk tidak boleh kosong.'); return; }
        if (fertilizerDatabase.some(f => f.name.toLowerCase() === name.toLowerCase())) {
            alert('Pupuk dengan nama tersebut sudah ada.'); return;
        }

        const newFert = {
            name,
            N: parseFloat(document.getElementById('fert-n').value) || 0,
            P: parseFloat(document.getElementById('fert-p').value) || 0,
            K: parseFloat(document.getElementById('fert-k').value) || 0,
            Ca: parseFloat(document.getElementById('fert-ca').value) || 0,
            Mg: parseFloat(document.getElementById('fert-mg').value) || 0,
            S: parseFloat(document.getElementById('fert-s').value) || 0,
            B: parseFloat(document.getElementById('fert-b').value) || 0,
            Zn: parseFloat(document.getElementById('fert-zn').value) || 0,
        };
        fertilizerDatabase.push(newFert);
        saveFertilizers();
        renderLists();
        modal.classList.add('hidden');
    });
    
    // --- CALCULATION LOGIC ---
    function formatWeight(grams) {
        return grams >= 1000 ? `${(grams / 1000).toFixed(2)} kg` : `${grams.toFixed(1)} g`;
    }

    calculateBtn.addEventListener('click', () => {
        calculateBtn.querySelector('#btn-text').classList.add('hidden');
        calculateBtn.querySelector('#loader').classList.remove('hidden');
        calculateBtn.disabled = true;

        setTimeout(() => {
            const getVal = id => parseFloat(document.getElementById(id).value) || 0;
            const area = getVal('area');
            if (area <= 0) {
                alert("Luas lahan harus lebih dari 0.");
                resetLoader();
                return;
            }

            let needs = {
                N: getVal('target-n') * area, P: getVal('target-p') * area, K: getVal('target-k') * area,
                Ca: getVal('target-ca') * area, Mg: getVal('target-mg') * area, S: getVal('target-s') * area,
                B: getVal('target-b') * area, Zn: getVal('target-zn') * area
            };
            const targetNeeds = {...needs};
            let provided = { N: 0, P: 0, K: 0, Ca: 0, Mg: 0, S: 0, B: 0, Zn: 0 };
            let mix = {};
            
            const selectedNames = Array.from(document.querySelectorAll('input[name="fertilizer"]:checked')).map(cb => cb.value);
            if (selectedNames.length === 0) {
                selectionWarning.classList.remove('hidden');
                resetLoader();
                return;
            }
            selectionWarning.classList.add('hidden');

            const selectedFertilizers = fertilizerDatabase.filter(f => selectedNames.includes(f.name));
            selectedFertilizers.sort((a,b) => {
                const countA = Object.values(a).filter(v => typeof v === 'number' && v > 0).length;
                const countB = Object.values(b).filter(v => typeof v === 'number' && v > 0).length;
                return countA - countB;
            });

            const nutrients = ['P', 'K', 'N', 'Mg', 'Ca', 'S', 'B', 'Zn']; 

            selectedFertilizers.forEach(fert => {
                mix[fert.name] = 0;
                let primaryNutrient = null;
                for (const n of nutrients) {
                    if (fert[n] > 0 && needs[n] > 0) {
                        primaryNutrient = n;
                        break;
                    }
                }

                if (primaryNutrient) {
                    const fertNutrientPercent = fert[primaryNutrient] / 100;
                    if (fertNutrientPercent > 0) {
                        let weightNeeded = needs[primaryNutrient] / fertNutrientPercent;
                        mix[fert.name] += weightNeeded;

                        for (const n of Object.keys(provided)) {
                            const addedNutrient = weightNeeded * (fert[n] / 100);
                            provided[n] += addedNutrient;
                            needs[n] = Math.max(0, needs[n] - addedNutrient);
                        }
                    }
                }
            });
            displayResults(mix, provided, targetNeeds);
            resetLoader();
        }, 500);
    });

    function displayResults(mix, provided, targets) {
        resultsList.innerHTML = Object.entries(mix)
            .filter(([, weight]) => weight > 0.01)
            .map(([name, weight]) => `<div class="p-2 bg-white rounded-md flex justify-between items-center text-sm"><span>${name}</span> <span class="font-semibold text-blue-700">${formatWeight(weight)}</span></div>`)
            .join('');

        const summaryHtml = (title, color, nutrients) => `
            <div>
                <h4 class="font-semibold text-${color}-600 mb-1">${title}</h4>
                ${nutrients.map(n => `
                    <div class="flex justify-between text-xs">
                        <span>${n}:</span>
                        <span class="font-mono">${provided[n].toFixed(1)}g / ${targets[n].toFixed(1)}g</span>
                    </div>`).join('')}
            </div>`;

        summary.innerHTML = 
            summaryHtml('Primer', 'blue', ['N', 'P', 'K']) +
            summaryHtml('Sekunder', 'green', ['Ca', 'Mg', 'S']) +
            summaryHtml('Tersier', 'yellow', ['B', 'Zn']);

        placeholderResult.classList.add('hidden');
        actualResult.classList.remove('hidden');
    }

    function resetLoader() {
        calculateBtn.querySelector('#btn-text').classList.remove('hidden');
        calculateBtn.querySelector('#loader').classList.add('hidden');
        calculateBtn.disabled = false;
    }

    resetBtn.addEventListener('click', () => {
        nutrientForm.reset();
        document.querySelectorAll('input[name="fertilizer"]').forEach(cb => cb.checked = false);
        selectionWarning.classList.add('hidden');
        placeholderResult.classList.remove('hidden');
        actualResult.classList.add('hidden');
    });

    // --- INITIALIZATION ---
    loadFertilizers();
    renderLists();
});
</script>

</body>
</html>
